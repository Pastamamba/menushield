{
  "name": "MenuShield - Safe Dining for Food Allergies",
  "short_name": "MenuShield",
  "description": "Digital allergen filtering platform for safer, more confident dining experiences. Filter menus by allergens and enjoy worry-free dining.",
  "start_url": "/",
  "scope": "/",
  "id": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "orientation": "portrait-primary",
  "background_color": "#ffffff",
  "theme_color": "#059669",
  "categories": ["food", "health", "lifestyle", "medical", "productivity"],
  "lang": "en",
  "dir": "ltr",
  "shortcuts": [
    {
      "name": "Filter Menu",
      "short_name": "Filter",
      "description": "Filter menu by allergens",
      "url": "/?filter=open",
      "icons": [
        {
          "src": "/shortcut-filter-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Safe Dishes",
      "short_name": "Safe",
      "description": "Show only safe dishes",
      "url": "/?safe=true",
      "icons": [
        {
          "src": "/shortcut-safe-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-mobile-1.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Mobile View - Allergen Filter"
    },
    {
      "src": "/screenshot-mobile-2.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Mobile View - Menu List"
    },
    {
      "src": "/screenshot-desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Desktop View - Full Application"
    }
  ],
  "icons": [
    {
      "src": "/favicon-16x16.png",
      "sizes": "16x16",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/favicon-32x32.png",
      "sizes": "32x32",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/apple-touch-icon-57x57.png",
      "sizes": "57x57",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/apple-touch-icon-120x120.png",
      "sizes": "120x120",
